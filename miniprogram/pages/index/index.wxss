/* 首页样式 */
.index-page {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 40rpx;
}

.home-loading {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 18rpx;
}

.home-loading-spinner {
  width: 56rpx;
  height: 56rpx;
  border: 6rpx solid #ffd3d3;
  border-top-color: #ff6b6b;
  border-radius: 50%;
  animation: home-spin 0.9s linear infinite;
}

.home-loading-text {
  font-size: 26rpx;
  color: #888;
}

@keyframes home-spin {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}

/* 搜索栏 */
.search-header {
  background: linear-gradient(135deg, #FF6B6B, #E55A5A);
  padding: 20rpx 30rpx 40rpx;
}

.search-box {
  display: flex;
  align-items: center;
  background: #fff;
  border-radius: 36rpx;
  padding: 16rpx 30rpx;
}

.search-icon {
  font-size: 28rpx;
  margin-right: 12rpx;
  color: #999;
}

.search-placeholder {
  font-size: 28rpx;
  color: #999;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  height: 40rpx;
  line-height: 40rpx;
}

/* 轮播图 */
.banner-section {
  margin: -20rpx 30rpx 30rpx;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.banner-swiper {
  height: 280rpx;
}

.banner-image {
  width: 100%;
  height: 100%;
  border-radius: 16rpx;
}

/* 服务类型 */
.service-types {
  margin: 0 30rpx 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
}

.service-grid {
  display: flex;
  justify-content: space-between;
}

.service-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.service-icon {
  width: 100rpx;
  height: 100rpx;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 16rpx;
}

.icon-text {
  font-size: 48rpx;
}

.service-name {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 6rpx;
}

.service-desc {
  font-size: 22rpx;
  color: #999;
}

/* 服务优势 */
.advantages {
  margin: 0 30rpx 20rpx;
  display: flex;
  justify-content: space-around;
  padding: 24rpx;
}

.advantage-item {
  display: flex;
  align-items: center;
}

.advantage-icon {
  font-size: 32rpx;
  margin-right: 8rpx;
}

.advantage-text {
  font-size: 24rpx;
  color: #666;
}

/* 推荐阿姨 */
.recommend-section {
  margin: 0 30rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-header .section-title {
  margin-bottom: 0;
}

.more-link {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #999;
}

.arrow {
  margin-left: 4rpx;
  font-size: 24rpx;
}

.worker-list {
  margin-top: 20rpx;
}

/* 底部占位 */
.bottom-placeholder {
  height: 40rpx;
}

/* 通用卡片样式 */
.card {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
}

/* 阿姨首页 */
.worker-home {
  padding: 20rpx 30rpx 0;
}

.worker-hero-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
}

.worker-hero-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.hero-label {
  display: block;
  font-size: 24rpx;
  color: #888;
}

.hero-value {
  display: block;
  margin-top: 8rpx;
  font-size: 30rpx;
  font-weight: 600;
}

.hero-value.online {
  color: #18a058;
}

.hero-value.offline {
  color: #999;
}

.hero-btn {
  margin: 0;
  width: 164rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
  color: #fff;
  background: #ff6b6b;
}

.hero-btn::after {
  border: none;
}

.worker-stats {
  margin-top: 20rpx;
  display: flex;
  justify-content: space-between;
}

.worker-stats .stats-item {
  flex: 1;
  text-align: center;
}

.worker-stats .stats-num {
  display: block;
  font-size: 40rpx;
  color: #ff6b6b;
  font-weight: 700;
}

.worker-stats .stats-text {
  margin-top: 6rpx;
  display: block;
  font-size: 22rpx;
  color: #888;
}

.worker-section {
  margin-top: 20rpx;
}

.mini-card {
  padding: 18rpx 0;
  border-bottom: 1rpx solid #f3f3f3;
}

.mini-card:last-child {
  border-bottom: none;
}

.mini-title {
  display: block;
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.mini-sub {
  display: block;
  margin-top: 6rpx;
  font-size: 24rpx;
  color: #777;
}

.mini-actions {
  margin-top: 12rpx;
  display: flex;
  justify-content: flex-end;
  gap: 12rpx;
}

.mini-btn {
  margin: 0;
  width: 150rpx;
  border-radius: 28rpx;
  font-size: 22rpx;
}

.mini-btn::after {
  border: none;
}

.mini-btn.accept {
  background: #ff6b6b;
  color: #fff;
}

.mini-btn.reject {
  background: #f6f6f6;
  color: #666;
}

.mini-btn.contact {
  background: #fff1f1;
  color: #ff6b6b;
}

.empty-tip {
  padding: 20rpx 0 10rpx;
  text-align: center;
  font-size: 24rpx;
  color: #999;
}

.rule-row {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #666;
}

/* 平台首页 */
.platform-home {
  padding: 20rpx 30rpx 0;
}

.platform-hero-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.group-title {
  margin-top: 10rpx;
  margin-bottom: 4rpx;
  font-size: 24rpx;
  color: #999;
}
