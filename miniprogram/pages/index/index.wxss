/* 首页样式 */
.index-page {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 40rpx;
}

/* 搜索栏 */
.search-header {
  background: linear-gradient(135deg, #FF6B6B, #E55A5A);
  padding: 20rpx 30rpx 40rpx;
}

.search-box {
  display: flex;
  align-items: center;
  background: #fff;
  border-radius: 36rpx;
  padding: 16rpx 30rpx;
}

.search-icon {
  font-size: 28rpx;
  margin-right: 12rpx;
  color: #999;
}

.search-placeholder {
  font-size: 28rpx;
  color: #999;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  height: 40rpx;
  line-height: 40rpx;
}

/* 轮播图 */
.banner-section {
  margin: -20rpx 30rpx 30rpx;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.banner-swiper {
  height: 280rpx;
}

.banner-image {
  width: 100%;
  height: 100%;
  border-radius: 16rpx;
}

/* 服务类型 */
.service-types {
  margin: 0 30rpx 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
}

.service-grid {
  display: flex;
  justify-content: space-between;
}

.service-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.service-icon {
  width: 100rpx;
  height: 100rpx;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 16rpx;
}

.icon-text {
  font-size: 48rpx;
}

.service-name {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 6rpx;
}

.service-desc {
  font-size: 22rpx;
  color: #999;
}

/* 服务优势 */
.advantages {
  margin: 0 30rpx 20rpx;
  display: flex;
  justify-content: space-around;
  padding: 24rpx;
}

.advantage-item {
  display: flex;
  align-items: center;
}

.advantage-icon {
  font-size: 32rpx;
  margin-right: 8rpx;
}

.advantage-text {
  font-size: 24rpx;
  color: #666;
}

/* 推荐阿姨 */
.recommend-section {
  margin: 0 30rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-header .section-title {
  margin-bottom: 0;
}

.more-link {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #999;
}

.arrow {
  margin-left: 4rpx;
  font-size: 24rpx;
}

.worker-list {
  margin-top: 20rpx;
}

/* 底部占位 */
.bottom-placeholder {
  height: 40rpx;
}

/* 通用卡片样式 */
.card {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
}
