/* 个人中心页面样式 */
.profile-page {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 40rpx;
}

/* 用户信息卡片 */
.user-card {
  background: linear-gradient(135deg, #FF6B6B, #E55A5A);
  padding: 56rpx 30rpx 64rpx;
}

.user-info {
  display: flex;
  align-items: flex-start;
}

/* 头像容器 */
.avatar-wrapper {
  width: 156rpx;
  height: 156rpx;
  flex-shrink: 0;
  position: relative;
  overflow: visible;
}

.avatar-btn {
  width: 156rpx;
  height: 156rpx;
  padding: 0;
  margin: 0;
  background: transparent;
  border: none;
  border-radius: 50%;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
}

.avatar-btn::after {
  border: none;
}

.user-avatar {
  width: 148rpx;
  height: 148rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(255, 255, 255, 0.35);
  display: block;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.12);
}

/* 未登录时的默认头像样式 */
.avatar-default {
  width: 148rpx;
  height: 148rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
}

.avatar-default-icon {
  width: 86rpx;
  height: 86rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.3);
}

.avatar-edit-btn {
  position: absolute;
  right: 8rpx;
  bottom: 0;
  transform: translate(24%, 30%);
  width: 48rpx !important;
  height: 48rpx;
  min-height: 48rpx;
  line-height: 48rpx;
  text-align: center;
  border-radius: 50%;
  background: #ffffff;
  color: #FF6B6B;
  font-size: 28rpx;
  box-shadow: 0 4rpx 14rpx rgba(0, 0, 0, 0.18);
  z-index: 2;
  border: none;
  padding: 0;
  margin: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  font-weight: 500;
}

.avatar-edit-btn::after {
  border: none;
}

.user-detail {
  margin-left: 28rpx;
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  min-height: 156rpx;
  padding-top: 14rpx;
}

.name-editor {
  display: flex;
  align-items: center;
  height: 68rpx;
  padding: 0 12rpx 0 20rpx;
  border-radius: 34rpx;
  background: rgba(255, 255, 255, 0.16);
  margin-bottom: 14rpx;
}

.user-name {
  font-size: 36rpx;
  color: #fff;
  font-weight: 600;
  background: transparent;
  border: none;
  padding: 0;
  margin-bottom: 0;
  display: block;
  height: 68rpx;
  line-height: 68rpx;
  flex: 1;
  min-width: 0;
  box-sizing: border-box;
}

.user-name::after {
  border: none;
}

.name-edit-icon {
  margin-left: 10rpx;
  font-size: 26rpx;
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  color: #FF6B6B;
  background: rgba(255, 255, 255, 0.92);
  border-radius: 50%;
  flex-shrink: 0;
}

.user-phone {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.88);
  margin-top: 2rpx;
}

/* 登录按钮区域 */
.login-section {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

.login-btn {
  background: #fff;
  color: #FF6B6B;
  font-size: 32rpx;
  font-weight: 500;
  padding: 16rpx 48rpx;
  border-radius: 40rpx;
  margin: 0 0 12rpx 0;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  line-height: 1.2;
  height: auto;
  min-height: 72rpx;
}

.login-btn::after {
  border: none;
}

.login-tip {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  display: block;
}

/* 通用卡片样式 */
.card {
  background: #fff;
  border-radius: 16rpx;
  margin: 20rpx 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
}

/* 订单统计 */
.stats-card {
  display: flex;
  justify-content: space-around;
  padding: 30rpx 0;
  margin-top: -30rpx;
  position: relative;
  z-index: 1;
}

.stats-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 10rpx 20rpx;
}

.stats-num {
  font-size: 40rpx;
  font-weight: bold;
  color: #FF6B6B;
  margin-bottom: 8rpx;
}

.stats-label {
  font-size: 24rpx;
  color: #666;
}

/* 菜单组 */
.menu-group {
  padding: 20rpx 0;
  margin-bottom: 20rpx;
}

.menu-title {
  font-size: 26rpx;
  color: #999;
  padding: 0 24rpx 16rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.menu-list {
  padding: 10rpx 0;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  transition: background 0.2s;
}

.menu-item:active {
  background: #f9f9f9;
}

.menu-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
}

.menu-text {
  flex: 1;
  font-size: 30rpx;
  color: #333;
}

.menu-arrow {
  font-size: 28rpx;
  color: #ccc;
}

/* 退出登录 */
.logout-section {
  padding: 40rpx 30rpx;
}

.btn-logout {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: #fff;
  color: #FF6B6B;
  font-size: 30rpx;
  border-radius: 44rpx;
  margin: 0;
  padding: 0;
  border: none;
}

.btn-logout::after {
  border: none;
}

.btn-logout:active {
  background: #f9f9f9;
}

/* 底部占位 */
.bottom-placeholder {
  height: 40rpx;
}
