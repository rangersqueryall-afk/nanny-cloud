/* 个人中心页面样式 */
.profile-page {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 40rpx;
}

/* 用户信息卡片 */
.user-card {
  position: relative;
  background: linear-gradient(135deg, #ff7467 0%, #ff625d 55%, #ff8b6f 100%);
  padding: 56rpx 30rpx 72rpx;
  overflow: hidden;
}

.user-card-glow {
  position: absolute;
  width: 360rpx;
  height: 360rpx;
  right: -120rpx;
  top: -140rpx;
  border-radius: 50%;
  background: radial-gradient(circle, rgba(255, 255, 255, 0.28) 0%, rgba(255, 255, 255, 0) 68%);
  pointer-events: none;
}

.user-info {
  display: flex;
  align-items: center;
  position: relative;
  z-index: 1;
}

/* 头像容器 */
.avatar-wrapper {
  width: 164rpx;
  height: 164rpx;
  flex-shrink: 0;
  position: relative;
  overflow: visible;
  border-radius: 50%;
  padding: 6rpx;
  box-sizing: border-box;
  background: rgba(255, 255, 255, 0.24);
  backdrop-filter: blur(2px);
}

.avatar-btn {
  width: 152rpx;
  height: 152rpx;
  padding: 0;
  margin: 0;
  background: rgba(255, 255, 255, 0.12);
  border: none;
  border-radius: 50%;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
}

.avatar-btn::after {
  border: none;
}

.user-avatar {
  width: 152rpx;
  height: 152rpx;
  border-radius: 50%;
  border: 2rpx solid rgba(255, 255, 255, 0.45);
  display: block;
  box-shadow: 0 12rpx 28rpx rgba(0, 0, 0, 0.2);
}

/* 未登录时的默认头像样式 */
.avatar-default {
  width: 152rpx;
  height: 152rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.22);
  display: flex;
  align-items: center;
  justify-content: center;
  border: 2rpx solid rgba(255, 255, 255, 0.32);
}

.avatar-default-icon {
  width: 86rpx;
  height: 86rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.3);
}

.avatar-edit-btn {
  position: absolute;
  right: 0;
  bottom: 4rpx;
  transform: translate(24%, 30%);
  width: 56rpx !important;
  height: 56rpx;
  min-height: 56rpx;
  line-height: 56rpx;
  text-align: center;
  border-radius: 50%;
  background: #ffffff;
  color: #ff625d;
  font-size: 24rpx;
  box-shadow: 0 8rpx 18rpx rgba(0, 0, 0, 0.18);
  z-index: 2;
  border: none;
  padding: 0;
  margin: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  font-weight: 500;
}

.avatar-edit-btn::after {
  border: none;
}

.user-detail {
  margin-left: 24rpx;
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  min-height: 0;
  padding-top: 0;
}

.profile-label {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.8);
  letter-spacing: 2rpx;
  margin-bottom: 10rpx;
}

.name-editor {
  display: flex;
  align-items: center;
  height: 72rpx;
  padding: 0 12rpx 0 24rpx;
  border-radius: 36rpx;
  background: rgba(255, 255, 255, 0.2);
  margin-bottom: 12rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.24);
}

.user-name {
  font-size: 34rpx;
  color: #fff;
  font-weight: 700;
  background: transparent;
  border: none;
  padding: 0;
  margin-bottom: 0;
  display: block;
  height: 72rpx;
  line-height: 72rpx;
  flex: 1;
  min-width: 0;
  box-sizing: border-box;
}

.user-name::after {
  border: none;
}

.name-edit-icon {
  margin-left: 12rpx;
  font-size: 20rpx;
  width: 84rpx;
  height: 44rpx;
  line-height: 44rpx;
  text-align: center;
  color: #ff625d;
  background: rgba(255, 255, 255, 0.94);
  border-radius: 22rpx;
  flex-shrink: 0;
  font-weight: 600;
}

.user-meta {
  display: block;
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.84);
  margin-top: 0;
  line-height: 1.4;
  max-width: 100%;
  word-break: break-all;
}

.phone-row {
  margin-top: 4rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 10rpx;
  width: 100%;
}

.bind-phone-btn {
  margin: 0;
  width: 144rpx;
  height: 48rpx;
  line-height: 48rpx;
  border-radius: 999rpx;
  background: rgba(255, 255, 255, 0.92);
  color: #ff625d;
  font-size: 20rpx;
  font-weight: 600;
  border: none;
  padding: 0;
  flex-shrink: 0;
}

.bind-phone-btn::after {
  border: none;
}

/* 登录按钮区域 */
.login-section {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.login-btn {
  background: #fff;
  color: #FF6B6B;
  font-size: 32rpx;
  font-weight: 500;
  padding: 16rpx 48rpx;
  border-radius: 40rpx;
  margin: 0 0 12rpx 0;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  line-height: 1.2;
  height: auto;
  min-height: 72rpx;
}

.login-btn::after {
  border: none;
}

.login-tip {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  display: block;
}

/* 通用卡片样式 */
.card {
  background: #fff;
  border-radius: 16rpx;
  margin: 20rpx 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
}

/* 订单统计 */
.stats-card {
  display: flex;
  justify-content: space-around;
  padding: 30rpx 0;
  margin-top: -30rpx;
  position: relative;
  z-index: 1;
}

.stats-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 10rpx 20rpx;
}

.stats-num {
  font-size: 40rpx;
  font-weight: bold;
  color: #FF6B6B;
  margin-bottom: 8rpx;
}

.stats-label {
  font-size: 24rpx;
  color: #666;
}

/* 菜单组 */
.menu-group {
  padding: 20rpx 0;
  margin-bottom: 20rpx;
}

.menu-title {
  font-size: 26rpx;
  color: #999;
  padding: 0 24rpx 16rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.menu-list {
  padding: 10rpx 0;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  transition: background 0.2s;
}

.menu-item:active {
  background: #f9f9f9;
}

.menu-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
}

.menu-text {
  flex: 1;
  font-size: 30rpx;
  color: #333;
}

.menu-arrow {
  font-size: 28rpx;
  color: #ccc;
}

/* 退出登录 */
.logout-section {
  padding: 40rpx 30rpx;
}

.btn-logout {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: #fff;
  color: #FF6B6B;
  font-size: 30rpx;
  border-radius: 44rpx;
  margin: 0;
  padding: 0;
  border: none;
}

.btn-logout::after {
  border: none;
}

.btn-logout:active {
  background: #f9f9f9;
}

/* 底部占位 */
.bottom-placeholder {
  height: 40rpx;
}
