/* 订单列表页样式 */
.orders-page {
  height: 100vh;
  background: #f5f5f5;
  display: flex;
  flex-direction: column;
}

/* Tab导航 */
.tab-nav {
  display: flex;
  background: #fff;
  border-bottom: 1rpx solid #f0f0f0;
  justify-content: space-around;
  padding: 0 20rpx;
}

.tab-item {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 88rpx;
  position: relative;
  max-width: 160rpx;
}

.tab-text {
  font-size: 28rpx;
  color: #666;
}

.tab-item.active .tab-text {
  color: #FF6B6B;
  font-weight: 500;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background: #FF6B6B;
  border-radius: 2rpx;
}

.tab-badge {
  min-width: 32rpx;
  height: 32rpx;
  line-height: 32rpx;
  background: #FF6B6B;
  color: #fff;
  font-size: 20rpx;
  border-radius: 16rpx;
  padding: 0 8rpx;
  margin-left: 8rpx;
}

/* 订单列表 */
.order-list {
  height: calc(100vh - 88rpx);
  padding: 20rpx 30rpx;
  box-sizing: border-box;
}

.list-content {
  min-height: 200rpx;
}

/* 下拉刷新区域样式优化 */
.order-list ::-webkit-scrollbar {
  display: none;
}

/* 加载状态 */
.load-status {
  padding: 40rpx 0;
  text-align: center;
}

.no-more {
  font-size: 24rpx;
  color: #999;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 40rpx;
}

.empty-icon {
  font-size: 100rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 30rpx;
  color: #666;
  margin-bottom: 40rpx;
}

.btn-go {
  width: 240rpx;
  height: 80rpx;
  line-height: 80rpx;
  background: linear-gradient(135deg, #FF6B6B, #E55A5A);
  color: #fff;
  font-size: 28rpx;
  border-radius: 40rpx;
  margin: 0;
  padding: 0;
  border: none;
}

.btn-go::after {
  border: none;
}

.btn-go:active {
  opacity: 0.9;
}
