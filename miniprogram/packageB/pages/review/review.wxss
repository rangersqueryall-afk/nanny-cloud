/* 评价页面样式 */
.review-page {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 140rpx;
}

/* 通用卡片样式 */
.card {
  background: #fff;
  border-radius: 16rpx;
  margin: 20rpx 30rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
}

.section-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
}

/* 订单信息 */
.order-info {
  display: flex;
  align-items: center;
}

.worker-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 12rpx;
  margin-right: 20rpx;
  object-fit: cover;
}

.order-detail {
  flex: 1;
}

.worker-name {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.service-info {
  font-size: 26rpx;
  color: #999;
}

/* 评分区域 */
.rating-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 0;
}

.rating-label {
  font-size: 28rpx;
  color: #666;
}

/* 评价标签 */
.tags-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.tag-item {
  padding: 12rpx 24rpx;
  background: #f5f5f5;
  border-radius: 30rpx;
  font-size: 26rpx;
  color: #666;
  transition: all 0.3s;
}

.tag-item.selected {
  background: rgba(255, 107, 107, 0.1);
  color: #FF6B6B;
}

.tag-item:active {
  opacity: 0.8;
}

/* 文字评价 */
.review-textarea {
  width: 100%;
  min-height: 200rpx;
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
  padding: 10rpx 0;
}

.textarea-footer {
  display: flex;
  justify-content: flex-end;
  margin-top: 10rpx;
}

.word-count {
  font-size: 24rpx;
  color: #999;
}

/* 匿名评价 */
.anonymous-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 10rpx;
}

.anonymous-label {
  font-size: 28rpx;
  color: #333;
}

.anonymous-switch {
  transform: scale(0.8);
}

.anonymous-tip {
  font-size: 24rpx;
  color: #999;
}

/* 底部提交栏 */
.bottom-bar {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 20rpx 30rpx;
  padding-bottom: calc(20rpx + constant(safe-area-inset-bottom));
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  background: #fff;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.06);
}

.btn-submit {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: linear-gradient(135deg, #FF6B6B, #E55A5A);
  color: #fff;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 44rpx;
  margin: 0;
  padding: 0;
  border: none;
}

.btn-submit::after {
  border: none;
}

.btn-submit:active {
  opacity: 0.9;
}

.btn-submit.disabled {
  background: #ccc;
}
