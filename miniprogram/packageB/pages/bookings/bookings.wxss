.bookings-page {
  min-height: 100vh;
  background: #f5f5f5;
}

.mode-banner {
  margin: 0 24rpx;
  padding: 16rpx 0 8rpx;
  font-size: 24rpx;
  color: #666;
}

.booking-list {
  height: 100vh;
}

.list-content {
  padding: 20rpx 24rpx 0;
}

.booking-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 16rpx;
}

.worker {
  display: flex;
  align-items: center;
  min-width: 0;
  flex: 1;
}

.avatar {
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
  flex-shrink: 0;
}

.meta {
  margin-left: 14rpx;
  min-width: 0;
}

.name {
  display: block;
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
}

.time {
  margin-top: 6rpx;
  display: block;
  font-size: 22rpx;
  color: #999;
}

.status {
  margin-left: 16rpx;
  flex-shrink: 0;
  font-size: 22rpx;
  color: #ff6b6b;
  background: #fff1f1;
  padding: 6rpx 14rpx;
  border-radius: 20rpx;
}

.detail-row {
  display: flex;
  align-items: flex-start;
  margin-top: 10rpx;
}

.label {
  width: 120rpx;
  color: #999;
  font-size: 24rpx;
  flex-shrink: 0;
}

.value {
  font-size: 24rpx;
  color: #333;
}

.address {
  line-height: 1.45;
}

.price {
  color: #ff6b6b;
  font-weight: 600;
}

.actions {
  margin-top: 18rpx;
  display: flex;
  justify-content: flex-end;
  flex-wrap: wrap;
  gap: 12rpx;
}

.btn-secondary {
  margin: 0;
  width: 176rpx;
  height: 58rpx;
  line-height: 58rpx;
  border-radius: 29rpx;
  background: #f6f6f6;
  color: #666;
  font-size: 24rpx;
}

.btn-secondary::after {
  border: none;
}

.btn-primary {
  margin: 0;
  width: 176rpx;
  height: 58rpx;
  line-height: 58rpx;
  border-radius: 29rpx;
  background: #ff6b6b;
  color: #fff;
  font-size: 24rpx;
}

.btn-primary::after {
  border: none;
}

.load-status {
  padding: 24rpx 0 40rpx;
  text-align: center;
}

.no-more {
  font-size: 24rpx;
  color: #999;
}

.empty-state {
  padding: 180rpx 40rpx;
  text-align: center;
}

.empty-icon {
  display: block;
  font-size: 88rpx;
}

.empty-text {
  margin-top: 20rpx;
  display: block;
  font-size: 28rpx;
  color: #666;
}

.btn-go {
  margin-top: 28rpx;
  width: 260rpx;
  height: 72rpx;
  line-height: 72rpx;
  border-radius: 36rpx;
  background: #ff6b6b;
  color: #fff;
  font-size: 28rpx;
}

.btn-go::after {
  border: none;
}
