<!-- 订单详情页 -->
<view class="order-detail-page">
  <!-- 订单状态 -->
  <view class="status-section">
    <view class="status-icon">{{statusIcon}}</view>
    <text class="status-text">{{order.statusText}}</text>
    <text class="status-desc">{{statusDesc}}</text>
  </view>
  
  <!-- 状态流程 -->
  <view class="process-section card">
    <view class="process-list">
      <view class="process-item {{item.completed ? 'completed' : ''}} {{item.active ? 'active' : ''}}" wx:for="{{processList}}" wx:key="index">
        <view class="process-dot"></view>
        <view class="process-line" wx:if="{{index < processList.length - 1}}"></view>
        <view class="process-info">
          <text class="process-name">{{item.name}}</text>
          <text class="process-time" wx:if="{{item.time}}">{{item.time}}</text>
        </view>
      </view>
    </view>
  </view>
  
  <!-- 阿姨信息 -->
  <view class="worker-section card">
    <view class="section-title">服务人员</view>
    <view class="worker-info" bindtap="onWorkerTap">
      <image class="worker-avatar" src="{{order.workerAvatar}}" mode="aspectFill"/>
      <view class="worker-detail">
        <text class="worker-name">{{order.workerName}}</text>
        <text class="service-type">{{order.serviceType}}</text>
      </view>
      <text class="arrow">></text>
    </view>
  </view>
  
  <!-- 服务信息 -->
  <view class="service-section card">
    <view class="section-title">服务信息</view>
    <view class="info-list">
      <view class="info-item">
        <text class="item-label">服务时间</text>
        <text class="item-value">{{order.serviceDate}} {{order.serviceTime}}</text>
      </view>
      <view class="info-item">
        <text class="item-label">服务地址</text>
        <text class="item-value">{{order.address}}</text>
      </view>
      <view class="info-item">
        <text class="item-label">联系人</text>
        <text class="item-value">{{order.contactName}} {{order.contactPhone}}</text>
      </view>
      <view class="info-item" wx:if="{{order.remark}}">
        <text class="item-label">备注</text>
        <text class="item-value">{{order.remark}}</text>
      </view>
    </view>
  </view>
  
  <!-- 订单信息 -->
  <view class="order-info-section card">
    <view class="section-title">订单信息</view>
    <view class="info-list">
      <view class="info-item">
        <text class="item-label">订单编号</text>
        <text class="item-value">{{order.orderNo}}</text>
      </view>
      <view class="info-item">
        <text class="item-label">下单时间</text>
        <text class="item-value">{{order.createTime}}</text>
      </view>
      <view class="info-item">
        <text class="item-label">服务类型</text>
        <text class="item-value">{{order.serviceType}}</text>
      </view>
      <view class="info-item">
        <text class="item-label">服务时长</text>
        <text class="item-value">{{order.duration}}</text>
      </view>
    </view>
    
    <view class="price-detail">
      <view class="price-row">
        <text class="price-label">服务费用</text>
        <text class="price-value">¥{{order.servicePrice}}</text>
      </view>
      <view class="price-row" wx:if="{{order.discount > 0}}">
        <text class="price-label">优惠</text>
        <text class="price-value discount">-¥{{order.discount}}</text>
      </view>
      <view class="divider"></view>
      <view class="price-row total">
        <text class="price-label">实付金额</text>
        <text class="price-total">¥{{order.totalPrice}}</text>
      </view>
    </view>
  </view>
  
  <!-- 底部占位 -->
  <view class="bottom-placeholder"></view>
  
  <!-- 底部操作栏 -->
  <view class="bottom-bar" wx:if="{{actionButtons.length > 0}}">
    <view class="action-btns">
      <button 
        class="btn {{item.type}}" 
        wx:for="{{actionButtons}}" 
        wx:key="action"
        data-action="{{item.action}}"
        bindtap="onActionTap"
      >{{item.text}}</button>
    </view>
  </view>
</view>
