/* 订单卡片组件样式 */
.order-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
}

/* 订单头部 */
.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.order-no {
  font-size: 24rpx;
  color: #999;
}

.order-status {
  font-size: 26rpx;
  font-weight: 500;
}

/* 状态颜色 */
.order-status.pending {
  color: #FAAD14;
}

.order-status.confirmed {
  color: #1890FF;
}

.order-status.serving {
  color: #52C41A;
}

.order-status.completed {
  color: #999;
}

.order-status.cancelled {
  color: #999;
  text-decoration: line-through;
}

/* 阿姨信息 */
.worker-info {
  display: flex;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.worker-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 12rpx;
  object-fit: cover;
}

.worker-detail {
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
}

.worker-name {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
}

.service-type {
  font-size: 24rpx;
  color: #666;
}

/* 服务信息 */
.service-info {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.info-item {
  display: flex;
  margin-bottom: 10rpx;
}

.info-item:last-child {
  margin-bottom: 0;
}

.info-item .label {
  font-size: 26rpx;
  color: #999;
  flex-shrink: 0;
}

.info-item .value {
  font-size: 26rpx;
  color: #333;
  flex: 1;
}

/* 订单底部 */
.order-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 20rpx;
  gap: 20rpx;
}

.price-info {
  display: flex;
  align-items: baseline;
  flex-shrink: 0;
}

.price-info .label {
  font-size: 24rpx;
  color: #666;
}

.price {
  color: #FF6B6B;
}

.price .unit {
  font-size: 22rpx;
}

.price .value {
  font-size: 32rpx;
  font-weight: bold;
}

/* 操作按钮 */
.action-btns {
  display: flex;
  gap: 10rpx;
  flex-shrink: 0;
}

.btn {
  min-width: 80rpx !important;
  width: 80rpx !important;
  max-width: 80rpx !important;
  height: 48rpx !important;
  line-height: 48rpx !important;
  font-size: 20rpx !important;
  border-radius: 24rpx !important;
  padding: 0 !important;
  margin: 0 !important;
  border: none !important;
  white-space: nowrap;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  box-sizing: border-box;
}

.btn::after {
  border: none;
}

.btn.default {
  background: #f5f5f5;
  color: #666;
}

.btn.primary {
  background: linear-gradient(135deg, #FF6B6B, #E55A5A);
  color: #fff;
}

.btn.danger {
  background: #fff;
  color: #FF6B6B;
  border: 2rpx solid #FF6B6B;
}

.btn:active {
  opacity: 0.9;
}
