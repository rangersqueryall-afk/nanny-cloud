<!-- 订单卡片组件 -->
<view class="order-card" bindtap="onTap">
  <!-- 订单头部 -->
  <view class="order-header">
    <text class="order-no">订单号：{{order.orderNo}}</text>
    <text class="order-status {{order.status}}">{{order.statusText}}</text>
  </view>
  
  <!-- 阿姨信息 -->
  <view class="worker-info">
    <image class="worker-avatar" src="{{order.workerAvatar || '/images/default-avatar.png'}}" mode="aspectFill"/>
    <view class="worker-detail">
      <text class="worker-name">{{order.workerName}}</text>
      <text class="service-type">{{order.serviceType}}</text>
    </view>
  </view>
  
  <!-- 服务信息 -->
  <view class="service-info">
    <view class="info-item">
      <text class="label">服务时间：</text>
      <text class="value">{{order.serviceDate}} {{order.serviceTime}}</text>
    </view>
    <view class="info-item">
      <text class="label">服务地址：</text>
      <text class="value">{{order.address}}</text>
    </view>
  </view>
  
  <!-- 订单底部 -->
  <view class="order-footer">
    <view class="price-info">
      <text class="label">合计：</text>
      <text class="price">
        <text class="unit">¥</text>
        <text class="value">{{order.totalPrice}}</text>
      </text>
    </view>
    
    <!-- 操作按钮 -->
    <view class="action-btns">
      <button 
        class="btn {{item.type}}" 
        wx:for="{{actionButtons}}" 
        wx:key="action"
        data-action="{{item.action}}"
        catchtap="onActionTap"
      >{{item.text}}</button>
    </view>
  </view>
</view>
