/* 加载动画组件样式 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
}

.loading-container.fullscreen {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 9999;
  background: rgba(255, 255, 255, 0.9);
}

/* 遮罩层 */
.loading-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 9998;
  background: rgba(0, 0, 0, 0.3);
}

/* 旋转动画 */
.loading-spinner {
  position: relative;
  width: 60rpx;
  height: 60rpx;
}

.spinner-circle {
  width: 100%;
  height: 100%;
  border: 4rpx solid #f0f0f0;
  border-top-color: #FF6B6B;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

/* 点动画 */
.loading-dots {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.dot {
  width: 16rpx;
  height: 16rpx;
  background: #FF6B6B;
  border-radius: 50%;
  animation: bounce 0.6s ease-in-out infinite;
}

.dot:nth-child(2) {
  animation-delay: 0.1s;
}

.dot:nth-child(3) {
  animation-delay: 0.2s;
}

@keyframes bounce {
  0%, 80%, 100% {
    transform: scale(0.6);
    opacity: 0.5;
  }
  40% {
    transform: scale(1);
    opacity: 1;
  }
}

/* 脉冲动画 */
.loading-pulse {
  position: relative;
  width: 80rpx;
  height: 80rpx;
}

.pulse-ring {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 100%;
  height: 100%;
  border: 4rpx solid #FF6B6B;
  border-radius: 50%;
  opacity: 0;
  animation: pulse 1.5s ease-out infinite;
}

.pulse-ring:nth-child(2) {
  animation-delay: 0.5s;
}

.pulse-ring:nth-child(3) {
  animation-delay: 1s;
}

@keyframes pulse {
  0% {
    transform: translate(-50%, -50%) scale(0.5);
    opacity: 1;
  }
  100% {
    transform: translate(-50%, -50%) scale(1.2);
    opacity: 0;
  }
}

/* 进度条 */
.loading-bar {
  width: 80%;
  max-width: 400rpx;
}

.bar-track {
  height: 8rpx;
  background: #f0f0f0;
  border-radius: 4rpx;
  overflow: hidden;
}

.bar-progress {
  height: 100%;
  background: linear-gradient(90deg, #FF6B6B, #E55A5A);
  border-radius: 4rpx;
  transition: width 0.3s ease;
}

.bar-text {
  display: block;
  text-align: center;
  margin-top: 16rpx;
  font-size: 24rpx;
  color: #666;
}

/* 骨架屏 */
.loading-skeleton {
  width: 100%;
  padding: 20rpx;
}

.skeleton-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.skeleton-avatar {
  width: 100rpx;
  height: 100rpx;
  background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
  background-size: 200% 100%;
  border-radius: 12rpx;
  margin-right: 20rpx;
  animation: shimmer 1.5s infinite;
}

.skeleton-content {
  flex: 1;
}

.skeleton-line {
  height: 28rpx;
  background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
  background-size: 200% 100%;
  border-radius: 4rpx;
  margin-bottom: 16rpx;
  animation: shimmer 1.5s infinite;
}

.skeleton-line.short {
  width: 60%;
  height: 24rpx;
}

@keyframes shimmer {
  0% {
    background-position: 200% 0;
  }
  100% {
    background-position: -200% 0;
  }
}

/* 加载文字 */
.loading-text {
  margin-top: 20rpx;
  font-size: 26rpx;
  color: #666;
}

/* 尺寸变体 */
.loading-container.small .loading-spinner {
  width: 40rpx;
  height: 40rpx;
}

.loading-container.small .spinner-circle {
  border-width: 3rpx;
}

.loading-container.large .loading-spinner {
  width: 80rpx;
  height: 80rpx;
}

.loading-container.large .spinner-circle {
  border-width: 5rpx;
}
