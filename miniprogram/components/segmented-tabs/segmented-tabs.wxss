.segmented-tabs {
  margin: 0 24rpx 12rpx;
  padding: 8rpx;
  border-radius: 16rpx;
  background: #fff;
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.segmented-tab {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 12rpx 0;
  border-radius: 12rpx;
}

.tab-text {
  font-size: 24rpx;
  color: #666;
}

.segmented-tab.active {
  background: #fff1f1;
}

.segmented-tab.active .tab-text {
  color: #ff6b6b;
  font-weight: 600;
}

.tab-badge {
  min-width: 32rpx;
  height: 32rpx;
  line-height: 32rpx;
  background: #ff6b6b;
  color: #fff;
  font-size: 20rpx;
  border-radius: 16rpx;
  padding: 0 8rpx;
  margin-left: 8rpx;
}

