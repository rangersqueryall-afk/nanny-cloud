.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding: 24rpx;
}

.form {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
}

.form-item {
  margin-bottom: 24rpx;
}

.label {
  display: block;
  font-size: 26rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.input {
  width: 100%;
  height: 76rpx;
  line-height: 76rpx;
  border: 1rpx solid #eaeaea;
  border-radius: 12rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
}

.textarea {
  width: 100%;
  height: 180rpx;
  border: 1rpx solid #eaeaea;
  border-radius: 12rpx;
  padding: 16rpx 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
}

.avatar-upload {
  width: 140rpx;
  height: 140rpx;
}

.avatar {
  width: 140rpx;
  height: 140rpx;
  border-radius: 12rpx;
}

.avatar-placeholder {
  width: 140rpx;
  height: 140rpx;
  border-radius: 12rpx;
  border: 1rpx dashed #ddd;
  color: #999;
  font-size: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.checkbox-group {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.checkbox {
  padding: 10rpx 18rpx;
  border-radius: 999rpx;
  border: 1rpx solid #e5e5e5;
  color: #666;
  font-size: 24rpx;
}

.checkbox.checked {
  border-color: #ff6b6b;
  background: #fff1f1;
  color: #ff6b6b;
}

.switch-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.switch-row .label {
  margin-bottom: 0;
}

.btn-submit {
  margin-top: 12rpx;
  height: 84rpx;
  line-height: 84rpx;
  border-radius: 42rpx;
  background: #ff6b6b;
  color: #fff;
  font-size: 30rpx;
}

.btn-submit::after {
  border: none;
}
