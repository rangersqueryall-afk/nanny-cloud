/* 预约页面样式 */
.booking-page {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 140rpx;
}

/* 通用卡片样式 */
.card {
  background: #fff;
  border-radius: 16rpx;
  margin: 20rpx 30rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
}

.section-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
}

/* 阿姨信息卡片 */
.worker-card {
  display: flex;
  align-items: center;
}

.worker-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 12rpx;
  margin-right: 24rpx;
  object-fit: cover;
}

.worker-info {
  flex: 1;
}

.worker-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  display: block;
  margin-bottom: 12rpx;
}

.worker-tags {
  display: flex;
  gap: 12rpx;
  margin-bottom: 12rpx;
}

.worker-tags .tag {
  background: #f5f5f5;
  color: #666;
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
}

.worker-price {
  color: #FF6B6B;
}

.worker-price .price-unit {
  font-size: 22rpx;
}

.worker-price .price-value {
  font-size: 36rpx;
  font-weight: bold;
}

/* 服务类型选择 */
.service-types {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.type-item {
  flex: 1;
  min-width: 180rpx;
  padding: 20rpx;
  background: #f5f5f5;
  border-radius: 12rpx;
  text-align: center;
  border: 2rpx solid transparent;
  transition: all 0.3s;
}

.type-item.active {
  background: rgba(255, 107, 107, 0.1);
  border-color: #FF6B6B;
}

.type-name {
  display: block;
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 6rpx;
}

.type-item.active .type-name {
  color: #FF6B6B;
}

.type-desc {
  font-size: 22rpx;
  color: #999;
}

/* 表单样式 */
.form-item {
  display: flex;
  align-items: flex-start;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.form-item:last-child {
  border-bottom: none;
}

.item-label {
  width: 160rpx;
  font-size: 28rpx;
  color: #333;
  flex-shrink: 0;
  line-height: 48rpx;
}

.item-input,
.picker-value {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  height: 48rpx;
  line-height: 48rpx;
  text-align: right;
}

.picker-value.placeholder {
  color: #999;
}

.item-textarea,
.remark-textarea {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  min-height: 120rpx;
  line-height: 1.6;
  padding: 10rpx 0;
}

.remark-textarea {
  width: 100%;
  min-height: 160rpx;
}

.word-count {
  display: block;
  text-align: right;
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

/* 价格卡片 */
.price-card {
  background: linear-gradient(135deg, #FFF8F8, #FFF0F0);
}

.price-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12rpx 0;
}

.price-row.total {
  padding-top: 20rpx;
}

.price-label {
  font-size: 28rpx;
  color: #666;
}

.price-value {
  font-size: 28rpx;
  color: #333;
}

.price-total {
  font-size: 40rpx;
  color: #FF6B6B;
  font-weight: bold;
}

.divider {
  height: 1rpx;
  background: rgba(255, 107, 107, 0.2);
  margin: 16rpx 0;
}

/* 底部占位 */
.bottom-placeholder {
  height: 40rpx;
}

/* 底部操作栏 */
.bottom-bar {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  padding-bottom: calc(20rpx + constant(safe-area-inset-bottom));
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  background: #fff;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.06);
}

.price-info {
  display: flex;
  align-items: baseline;
  margin-right: 30rpx;
}

.price-info .price-label {
  font-size: 26rpx;
  color: #666;
}

.price-info .price-value {
  color: #FF6B6B;
}

.price-info .unit {
  font-size: 24rpx;
}

.price-info .value {
  font-size: 40rpx;
  font-weight: bold;
}

.btn-submit {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  background: linear-gradient(135deg, #FF6B6B, #E55A5A);
  color: #fff;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 44rpx;
  margin: 0;
  padding: 0;
  border: none;
}

.btn-submit::after {
  border: none;
}

.btn-submit:active {
  opacity: 0.9;
}

.btn-submit.disabled {
  background: #ccc;
}
