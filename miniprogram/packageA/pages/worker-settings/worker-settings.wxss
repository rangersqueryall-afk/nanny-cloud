.settings-page {
  min-height: 100vh;
  background: #f5f5f5;
  padding: 20rpx 24rpx 40rpx;
}

.card {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
}

.title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
}

.form-item {
  margin-bottom: 16rpx;
}

.row {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.row-gap {
  margin-top: 12rpx;
}

.label {
  font-size: 28rpx;
  color: #333;
  min-width: 160rpx;
}

.readonly {
  font-size: 26rpx;
  color: #666;
}

.hint {
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #999;
}

.sub-title {
  margin: 16rpx 0 12rpx;
  font-size: 26rpx;
  color: #666;
}

.input,
.textarea {
  width: 100%;
  min-height: 80rpx;
  background: #fafafa;
  border: 1rpx solid #eee;
  border-radius: 12rpx;
  padding: 18rpx;
  font-size: 26rpx;
  box-sizing: border-box;
}

.textarea {
  min-height: 160rpx;
}

.chip-wrap {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.chip {
  padding: 10rpx 20rpx;
  border-radius: 24rpx;
  font-size: 24rpx;
  color: #666;
  background: #f3f3f3;
}

.chip.active {
  color: #fff;
  background: #ff6b6b;
}

.option-row {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
  font-size: 26rpx;
  color: #333;
}

.option-row radio {
  margin-right: 10rpx;
}

.time-row {
  display: flex;
  gap: 14rpx;
}

.time-picker {
  width: 300rpx;
  height: 72rpx;
  line-height: 72rpx;
  text-align: center;
  border-radius: 12rpx;
  border: 1rpx solid #eee;
  background: #fafafa;
  color: #333;
  font-size: 24rpx;
}

.avatar-upload {
  width: 140rpx;
  height: 140rpx;
  border-radius: 16rpx;
  overflow: hidden;
  border: 1rpx dashed #ddd;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #fafafa;
}

.avatar {
  width: 100%;
  height: 100%;
}

.avatar-placeholder {
  font-size: 24rpx;
  color: #999;
}

.btn-submit {
  margin-top: 12rpx;
  border-radius: 42rpx;
  background: #ff6b6b;
  color: #fff;
  font-size: 30rpx;
}

.btn-submit.disabled {
  opacity: 0.6;
}

.btn-submit::after {
  border: none;
}
