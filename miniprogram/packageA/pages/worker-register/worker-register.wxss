.container {
  padding: 30rpx;
  background: #f5f5f5;
  min-height: 100vh;
}

.header {
  text-align: center;
  margin-bottom: 40rpx;
}

.title {
  display: block;
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 26rpx;
  color: #999;
}

.form {
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
}

.form-item {
  margin-bottom: 30rpx;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 15rpx;
}

.required {
  color: #FF6B6B;
}

.avatar-upload {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  border: 2rpx dashed #ddd;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
}

.avatar {
  width: 100%;
  height: 100%;
}

.avatar-placeholder {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.avatar-placeholder .icon {
  font-size: 48rpx;
  color: #999;
}

.avatar-placeholder .text {
  font-size: 22rpx;
  color: #999;
}

.input {
  height: 80rpx;
  background: #f8f8f8;
  border-radius: 10rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
}

.checkbox-group {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
}

.checkbox {
  padding: 15rpx 25rpx;
  background: #f8f8f8;
  border-radius: 30rpx;
  font-size: 26rpx;
  color: #666;
  border: 2rpx solid transparent;
}

.checkbox.checked {
  background: rgba(255, 107, 107, 0.1);
  color: #FF6B6B;
  border-color: #FF6B6B;
}

.tags-preview {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
  margin-top: 15rpx;
}

.tag {
  padding: 8rpx 16rpx;
  background: rgba(255, 107, 107, 0.1);
  color: #FF6B6B;
  font-size: 22rpx;
  border-radius: 20rpx;
}

.textarea {
  height: 200rpx;
  background: #f8f8f8;
  border-radius: 10rpx;
  padding: 20rpx;
  font-size: 28rpx;
  width: 100%;
  box-sizing: border-box;
}

.count {
  display: block;
  text-align: right;
  font-size: 22rpx;
  color: #999;
  margin-top: 10rpx;
}

.btn-submit {
  margin-top: 40rpx;
  background: linear-gradient(135deg, #FF6B6B, #E55A5A);
  color: #fff;
  font-size: 32rpx;
  border-radius: 45rpx;
  border: none;
}

.btn-submit:active {
  opacity: 0.9;
}
